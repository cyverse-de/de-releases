listen_port: 3000

db:
  user: {{ dbms_connection_user }}
  password: {{ dbms_conenction_pass }}
  host: {{ groups['dbms_primary'][0] }}
  port: {{ pg_listen_port }}
  database: {{ de_db_name }}

iplant_groups:
  uri: {{ baseurls_iplant_groups | trim_end_matches(pat="/")}}

logging:
  level: info
  label: dashboard-aggregator

permissions:
  public_group: iplant:de:{{ ns }}:users:de-users
  uri: {{ baseurls_permissions | trim_end_matches(pat="/")}}

website:
  url: {{ dashboard_aggregator_website_url | trim_end_matches(pat="/")}}
  feeds:
    news: /news/rss.xml
    events: /events/rss.xml

videos:
  url: https://www.youtube.com/feeds/videos.xml?channel_id=UC-gvdjTz9rq6RovZ57LoDDA

apps:
  favorites_group_index: 1
  url: {{ baseurls_apps | trim_end_matches(pat="/")}}

app-exposer:
  url: {{ baseurls_app_exposer | trim_end_matches(pat="/")}}
  user: dashboard-aggregator

metadata:
  url: {{ baseurls_metadata | trim_end_matches(pat="/")}}
  featured_apps_attr: cyverse-blessed
  featured_apps_value: true
